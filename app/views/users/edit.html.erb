<div class="container">  <!-- この行を追加 -->
 <div class="row">      <!-- この行を追加 -->
  <div class="mx-auto">  <!-- この行を追加 -->
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
      <div class="row">      <!-- この行を追加 -->
        <div class="mx-auto">  <!-- この行を追加 -->
          <label for="inputImage">Image</label><br>
          <%= f.attachment_field :profile_image %>
        </div>
      </div>
      <div class="row">      <!-- この行を追加 -->
        <div class="mx-auto">  <!-- この行を追加 -->
          <%= f.label :introduction %><br>
          <%= f.text_field :introduction %><br>
          <%= f.submit "Update User" %>
        </div>
      </div>
    <% end %>
  </div>
 </div>
</div><!-- container -->