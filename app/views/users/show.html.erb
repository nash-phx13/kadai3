
<div class="container">  <!-- この行を追加 -->
 <div class="row">      <!-- この行を追加 -->
 <div class="col-md-2">  <!-- この行を追加 -->
   <h2>User info</h2>
    <div class="profile-container">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><h3 class="profile-name"><%= @user.name %></h3></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><h3 class="profile-introduction"><%= @user.introduction %></h3></th>
        </tr>
      </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog"></a>
      </div>
      <% if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
   <h2>New book</h2>
   <% if @book.errors.any? %>
   <h3>error:<%= @book.errors.count %>件のエラーが発生しました</h3>
   <br>
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    </br>
   <% end %>
<!-- form_with部分 -->
   <%= form_with model:@book, local:true do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create Book'%>
   <% end %>
 </div>
 </div>  <!-- この行を追加 -->



   <div class="col-md-9 offset-md-1">  <!-- この行を追加 -->
   <table class="table table-striped">
     <h1>Books</h1>
     <table class="table table-hover table-inverse">
       <thead>
    　<tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    　</tr>
    　 </thead>
    　 <tbody>
    　   <% @books.each do |book| %>
    　  <tr>
       <td><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
    　  <td><%= book.title %></td>
    　  <td><%= book.body %></td>
    　  <td><%= link_to "Edit", book_path(book.id) %></td>
    　  <td><%= link_to "Destroy",user_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
    　  </tr>
    　  <% end %>
    　  </tbody>
    　</table>
   </table>
   </div>  <!-- "col-md-10 offset-md-1" -->
</div>  <!-- row -->
</div>    <!-- "container-->