<h2>Log insitaato</h2>

<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
<div>
<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <%= f.submit "変更を保存" %>
<% end %>


<p>ユーザーネーム：<%= @user.name %></p>
</div>

<h2>New book</h2>
<% if @book.errors.any? %>
  <h3>error:<%= @book.errors.count %>件のエラーが発生しました</h3>
  <br>
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
  </br>
<% end %>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book'%>
<% end %>

<h1>Book detail</h1>
<table>
  <thead>
    　<tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    　</tr>
　</thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
    　<td><%= book.title %></td>
    　<td><%= book.body %></td>
    　<td><%= link_to "Edit", book_path(book.id) %></td>
   　  <td><%= link_to "Destroy",user_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
    </tr>
 　 <% end %>
  </tbody>
</table>