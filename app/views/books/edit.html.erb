<% if @book.errors.any? %>
  <h3>error:<%= @book.errors.count %>件のエラーが発生しました</h3>
  <br>
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
  </br>
<% end %>

<h1>Editing Book</h1>
<%= form_with model:@book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit  %>
  <%= link_to "Show", user_path %>
  <%= link_to "Back", books_path %>
<% end %>